<div>
  <% book.book_comments.each do |book_comment| %>
    <p><%= image_tag book_comment.user.get_profile_image(100,100) %>
      <%= book_comment.user.name %>
      <%= book_comment.comment %>
    <% if book_comment.user == current_user %>
      <%= link_to "削除", book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true %>
    <% end %>
    </p>
  <% end %>
</div>
<div>
    <%= form_with model: book_comment, url: book_book_comments_path(book), local: false do |f| %>
      <%= f.text_area :comment, rows: '5', placeholder: "コメントをここに" %>
      <p><%= f.submit "送信" %></p>
    <% end %>
</div>