<h1>Books search for "test"</h1>
  <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
      <tr><% @results.each do |result| %>
        <td><%= image_tag result.user.get_profile_image(50,50) %></td>
        <td>
            <% if @search_target == "posts" %>
              <%= link_to result.title, book_path(result) %>
            <% else %>
              <%= link_to result.name, user_path(result) %>
            <% end %>
          <% end %>
        </td>
        <td></td>
      </tr>
  </tbody>
</table>


